<!DOCTYPE html>
<html>

<head>

    <%= include('header', title => "Maitre d'Nuage | $title_message") %>

</head>

<body class="gray-bg">

    <%= content %>

    <!-- Mainly scripts -->
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <!-- Toastr script -->
    <script src="js/plugins/toastr/toastr.min.js"></script>

    <% if(defined(stash('error_message'))) { %>
    <script>
        toastr.options = {
          "closeButton": true,
          "debug": false,
          "progressBar": true,
          "preventDuplicates": true,
          "positionClass": "toast-top-right",
          "onclick": null,
          "showDuration": "400",
          "hideDuration": "1000",
          "timeOut": "7000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }
        $( document ).ready(
            function() {
                toastr.error("<%= stash('error_message') %>", "Authentication error")
            }
        )
    </script>
    <% } %>

</body>

</html>
