<!DOCTYPE html>
<html>

<head>

    <%= include('header', title => "Maitre d'Nuage | $title_message") %>

</head>

<body class="gray-bg">

    <%= content %>

    <!-- Mainly scripts -->
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/plugins/i18next/i18next.min.js"></script>

<script>

    $(document).ready(function() {

        $.i18n.init({
            resGetPath: 'i18n/__lng__.json',
            load: 'unspecific',
            fallbackLng: false,
            lng: 'en_US'
        }, function (t){
            $('.loginscreen').i18n();
        });

        $('.set_en_US').on('click', function (){
            i18n.setLng('en_US', function(){
                $('.loginscreen').i18n();

                $('.set_en_US').addClass('active');
                $('.set_uk_UA').removeClass('active');
            });
        });

        $('.set_uk_UA').on('click', function (){
            i18n.setLng('uk_UA', function(){
                $('.loginscreen').i18n();

                $('.set_en_US').removeClass('active');
                $('.set_uk_UA').addClass('active');
            });
        })

    });

</script>

<script>$(document).ready(function() { $('[data-toggle="tooltip"]').tooltip() })</script>

% if(defined(stash('error_message'))) {
    <script src="js/plugins/toastr/toastr.min.js"></script>
    <script>
        toastr.options = {
          "closeButton": true,
          "debug": false,
          "progressBar": true,
          "preventDuplicates": true,
          "positionClass": "toast-top-right",
          "onclick": null,
          "showDuration": "400",
          "hideDuration": "1000",
          "timeOut": "7000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }
        $(document).ready(
            function() {
                toastr.error("<%= stash('error_message') %>", "Authentication error")
            }
        )
    </script>
% }

</body>

</html>
