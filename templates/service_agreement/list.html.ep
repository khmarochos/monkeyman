% asset_required(qw/css datatables 1/);
% asset_required(qw/js  datatables 1/);
% layout('authorized', title_message => 'Welcome!');
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>Number</th>
                        <th>Valid Since</th>
                        <th>Valid Till</th>
                        <th>Client</th>
                        <th>Provider</th>
                    </tr>
                    </thead>
                    <tbody>
% foreach my $service_agreement (@{ stash('service_agreements') }) {
                    <tr>
                        <td><%= $service_agreement->name                        %></td>
                        <td><%= $service_agreement->valid_since                 %></td>
                        <td><%= $service_agreement->valid_till || 'âˆž'           %></td>
                        <td><%= $service_agreement->client_contractor->name     %></td>
                        <td><%= $service_agreement->provider_contractor->name   %></td>
                    </tr>
% }
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Number</th>
                        <th>Valid Since</th>
                        <th>Valid Till</th>
                        <th>Client</th>
                        <th>Provider</th>
                    </tr>
                    </tfoot>
                    </table>
                </div>
